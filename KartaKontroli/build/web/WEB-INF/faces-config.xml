<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
   <navigation-rule>
      <navigation-case>
         <from-outcome>main</from-outcome>
         <to-view-id>/main.xhtml</to-view-id>
      </navigation-case>
   </navigation-rule>
   <navigation-rule>
      <navigation-case>
         <from-outcome>login</from-outcome>
         <to-view-id>/login.xhtml</to-view-id>
      </navigation-case>
   </navigation-rule>
   <navigation-rule>
      <navigation-case>
         <from-outcome>logout</from-outcome>
         <to-view-id>/logout.xhtml</to-view-id>
      </navigation-case>
   </navigation-rule>
   <application>
        <resource-bundle>
            <base-name>pl.biniu.megs.messages</base-name>
            <var>megs</var>
        </resource-bundle>
    </application>
    <managed-bean>
        <managed-bean-name>guestPreferences</managed-bean-name>
        <managed-bean-class>pl.biniu.themeSwitcher.GuestPreferences</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>themeSwitcherBean</managed-bean-name>
        <managed-bean-class>pl.biniu.themeSwitcher.ThemeSwitcherBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>gp</property-name>
            <value>#{guestPreferences}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>user</managed-bean-name>
        <managed-bean-class>pl.biniu.UserBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>changePage</managed-bean-name>
        <managed-bean-class>pl.biniu.ChangePageBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>newCard</managed-bean-name>
        <managed-bean-class>pl.biniu.newCard.InputNewCard</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        
    </managed-bean>
   
    <managed-bean>
        <managed-bean-name>btable</managed-bean-name>
        <managed-bean-class>pl.biniu.newCard.TableBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>control</managed-bean-name>
        <managed-bean-class>pl.biniu.ControlBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
</faces-config>
